RewriteEngine On

# Use the directory of this file as the rewrite base. If your host needs an explicit
# base (e.g., when the app sits under /journal/), uncomment and set RewriteBase.
#RewriteBase /

# Send everything except real files/directories to CodeIgniter
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]
